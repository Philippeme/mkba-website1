{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('settingsSearch');
            const clearBtn = document.getElementById('clearSearch');
            const resultsInfo = document.getElementById('searchResults');
            const resultsCount = document.getElementById('resultsCount');
            const noResults = document.getElementById('noResults');
            const settingsGrid = document.getElementById('settingsGrid');
            const settingsCards = document.querySelectorAll('.settings-card');

            let totalCards = settingsCards.length;

            // Fonction de recherche
            function performSearch() {
                const searchTerm = searchInput.value.toLowerCase().trim();
                let visibleCount = 0;
                let matchedCards = [];

                // Désactiver temporairement toutes les transitions
                settingsCards.forEach(card => {
                    card.style.transition = 'none';
                });

                // Réinitialiser tous les ordres
                settingsCards.forEach(card => {
                    card.style.order = '';
                    card.classList.remove('highlighted');
                });

                // Première passe : identifier les cartes correspondantes
                settingsCards.forEach(card => {
                    const keywords = card.dataset.keywords || '';
                    const title = card.querySelector('.settings-card-title').textContent.toLowerCase();
                    const description = card.querySelector('.settings-card-description').textContent.toLowerCase();
                    
                    const isMatch = !searchTerm || 
                                   keywords.includes(searchTerm) || 
                                   title.includes(searchTerm) || 
                                   description.includes(searchTerm);

                    if (isMatch) {
                        matchedCards.push(card);
                        visibleCount++;
                    }
                });

                // Deuxième passe : organiser l'affichage
                settingsCards.forEach(card => {
                    const isMatched = matchedCards.includes(card);
                    
                    if (isMatched) {
                        card.classList.remove('hidden');
                        if (searchTerm) {
                            card.classList.add('highlighted');
                            // Assigner un ordre séquentiel aux cartes trouvées
                            const matchIndex = matchedCards.indexOf(card);
                            card.style.order = matchIndex + 1;
                        } else {
                            // Mode normal : ordre naturel
                            card.style.order = '';
                        }
                    } else {
                        card.classList.add('hidden');
                    }
                });

                // Réactiver les transitions après un court délai
                setTimeout(() => {
                    settingsCards.forEach(card => {
                        card.style.transition = '';
                    });
                }, 50);

                // Mise à jour des informations de résultats
                if (searchTerm) {
                    resultsCount.textContent = visibleCount;
                    resultsInfo.innerHTML = `<strong>${visibleCount}</strong> paramètre${visibleCount > 1 ? 's' : ''} trouvé${visibleCount > 1 ? 's' : ''} pour "<em>${searchTerm}</em>"`;
                    clearBtn.classList.add('show');
                } else {
                    resultsCount.textContent = totalCards;
                    resultsInfo.innerHTML = `<span>${totalCards}</span> paramètres disponibles`;
                    clearBtn.classList.remove('show');
                }

                // Affichage du message "aucun résultat"
                if (visibleCount === 0 && searchTerm) {
                    noResults.classList.add('show');
                    settingsGrid.style.display = 'none';
                } else {
                    noResults.classList.remove('show');
                    settingsGrid.style.display = 'flex';
                }
            }

            // Fonction pour vider la recherche
            function clearSearchInput() {
                searchInput.value = '';
                searchInput.focus();
                performSearch();
            }

            // Événements
            searchInput.addEventListener('input', performSearch);
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    clearSearchInput();
                }
            });

            clearBtn.addEventListener('click', clearSearchInput);

            // Raccourci clavier Ctrl+K
            document.addEventListener('keydown', function(e) {
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                    e.preventDefault();
                    searchInput.focus();
                    searchInput.select();
                }
            });

            // Animation des cartes au scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Observer toutes les cartes - sans transitions pour éviter l'effet lors de la recherche
            settingsCards.forEach((card, index) => {
                card.style.opacity = '0';
