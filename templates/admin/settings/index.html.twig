{% extends 'admin/base.html.twig' %}

{% block title %}Paramètres Système{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --mk-primary: #0071BC;
            --mk-secondary: #8e32e9;
            --mk-orange: #f18221;
            --mk-blue: #1a4b8f;
            --mk-success: #10b981;
            --mk-warning: #f59e0b;
            --mk-danger: #ef4444;
            --mk-info: #3b82f6;
        }

        .settings-header {
            background: linear-gradient(135deg, var(--mk-orange) 0%, var(--mk-primary) 100%);
            color: white;
            padding: 2rem 0;
            margin: -2rem -2rem 2rem -2rem;
            position: relative;
            overflow: hidden;
        }

        .settings-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="settings-grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23settings-grid)"/></svg>');
            opacity: 0.3;
        }

        /* ========== BARRE DE RECHERCHE ========== */
        .search-section {
            margin-bottom: 32px;
        }

        .search-container-settings {
            position: relative;
            max-width: 400px;
            margin: 0 auto;
        }

        .search-input-settings {
            width: 100%;
            padding: 12px 20px 12px 48px;
            border: 2px solid #e5e7eb;
            border-radius: 25px;
            font-size: 14px;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        }

        .search-input-settings:focus {
            outline: none;
            border-color: var(--mk-primary);
            box-shadow: 0 0 0 4px rgba(0, 113, 188, 0.1), inset 0 2px 4px rgba(0,0,0,0.06);
            background: white;
        }

        .search-input-settings::placeholder {
            color: #9ca3af;
            font-style: italic;
        }

        .search-icon-settings {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .search-container-settings:focus-within .search-icon-settings {
            color: var(--mk-primary);
        }

        .search-results-info {
            text-align: center;
            margin-top: 12px;
            color: #6b7280;
            font-size: 13px;
            transition: all 0.3s ease;
        }

        .search-clear-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 6px;
            border-radius: 50%;
            transition: all 0.3s ease;
            opacity: 0;
            visibility: hidden;
        }

        .search-clear-btn.show {
            opacity: 1;
            visibility: visible;
        }

        .search-clear-btn:hover {
            background: #f3f4f6;
            color: var(--mk-danger);
        }

        .no-results {
            text-align: center;
            padding: 60px 20px;
            color: #6b7280;
            display: none;
        }

        .no-results.show {
            display: block;
            animation: fadeIn 0.3s ease;
        }

        .no-results-icon {
            font-size: 64px;
            color: #d1d5db;
            margin-bottom: 16px;
        }

        .no-results h3 {
            color: #374151;
            margin-bottom: 8px;
        }

        /* ========== CARTES AVEC FILTRAGE ========== */
        .settings-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 24px;
            margin-bottom: 2rem;
        }
        
        .settings-grid .settings-card {
            flex: 0 0 calc(33.333% - 16px);
            min-height: 230px;
            display: flex;
            flex-direction: column;
        }
        
        .settings-card-header {
            flex: 0 0 auto;
        }
        
        .settings-card-body {
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
        }

        .settings-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            overflow: hidden;
            border: 1px solid rgba(0,0,0,0.05);
            position: relative;
            opacity: 1;
            transform: scale(1);
        }

        .settings-card.hidden {
            display: none;
        }

        .settings-card.highlighted {
            border-color: var(--mk-primary);
            box-shadow: 0 8px 32px rgba(0, 113, 188, 0.15);
            transform: translateY(-2px);
        }

        .settings-card:hover:not(.hidden) {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

        .settings-card-header {
            padding: 24px;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            position: relative;
        }

        .settings-card-icon {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 16px;
            position: relative;
            overflow: hidden;
        }

        .settings-card-icon::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
        }

        .card-general .settings-card-icon { background: linear-gradient(135deg, #6d5192, #8e32e9); }
        .card-datasources .settings-card-icon { background: linear-gradient(135deg, #3b82f6, #1d4ed8); }
        .card-customizing .settings-card-icon { background: linear-gradient(135deg, #f59e0b, #d97706); }
        .card-files .settings-card-icon { background: linear-gradient(135deg, #10b981, #059669); }
        .card-pages .settings-card-icon { background: linear-gradient(135deg, #ef4444, #dc2626); }
        .card-modules .settings-card-icon { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
        .card-security .settings-card-icon { background: linear-gradient(135deg, #f18221, #ea580c); }
        .card-backup .settings-card-icon { background: linear-gradient(135deg, #1a4b8f, #1e40af); }

        .settings-card-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--mk-primary);
            margin-bottom: 8px;
        }

        .settings-card-description {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.5;
        }

        .settings-card-body {
            padding: 24px;
        }

        .settings-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn-settings {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .btn-settings-primary {
            background: var(--mk-primary);
            color: white;
        }

        .btn-settings-primary:hover {
            background: var(--mk-secondary);
            color: white;
            transform: translateY(-1px);
        }

        .btn-settings-outline {
            background: transparent;
            color: var(--mk-orange);
            border-color: var(--mk-orange);
        }

        .btn-settings-outline:hover {
            background: var(--mk-orange);
            color: white;
        }

        .system-status {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            padding: 32px;
            margin-bottom: 24px;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 24px;
        }

        .status-item {
            text-align: center;
            padding: 20px;
            background: #f8fafc;
            border-radius: 12px;
            border: 1px solid #e2e8f0;
        }

        .status-value {
            font-size: 24px;
            font-weight: 700;
            color: var(--mk-primary);
            margin-bottom: 8px;
        }

        .status-label {
            font-size: 14px;
            color: #64748b;
            font-weight: 500;
        }

        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }

        .status-online { background: var(--mk-success); }
        .status-warning { background: var(--mk-warning); }
        .status-offline { background: var(--mk-danger); }

        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            border-left: 4px solid var(--mk-primary);
        }

        .stat-number {
            font-size: 32px;
            font-weight: 800;
            color: var(--mk-primary);
            margin-bottom: 8px;
        }

        .stat-label {
            color: #64748b;
            font-weight: 500;
        }

        /* ========== ANIMATIONS ========== */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .search-input-settings:focus + .search-icon-settings {
            animation: pulse 0.5s ease;
        }

        /* ========== RESPONSIVE ========== */
        @media (max-width: 768px) {
            .settings-grid {
                flex-direction: column;
            }
            
            .settings-grid .settings-card {
                max-width: 100%;
                flex: 1 1 auto;
            }
            
            .settings-header {
                margin: -2rem -10px 2rem -10px;
                padding: 1.5rem 0;
            }
            
            .settings-card {
                margin: 0 -10px;
            }

            .search-section {
                margin-bottom: 24px;
            }

            .search-input-settings {
                font-size: 14px;
                padding: 10px 16px 10px 40px;
            }

            .search-icon-settings {
                left: 14px;
                font-size: 14px;
            }
        }
    </style>
{% endblock %}

