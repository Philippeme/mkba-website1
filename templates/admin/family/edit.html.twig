{% extends 'admin/base.html.twig' %}

{% block title %}Edit Family{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">
        <i class="bi-pencil me-2"></i>
        Edit Family: {{ family.fname }}
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('admin_family_index') }}">Families</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_family_show', {'id': family.id}) }}">{{ family.fname }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h5 class="card-title mb-0">
            <i class="bi-collection me-2"></i>
            Update Family Information
        </h5>
    </div>
    <div class="card-body">
        {{ include('admin/family/_form.html.twig', {'button_label': 'Update Family'}) }}
    </div>
</div>
{% endblock %}